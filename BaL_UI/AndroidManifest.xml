<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="software_engineering.bal_ui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="software_engineering.bal_ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="software_engineering.bal_ui.DisplayLoginScreen"
            android:label="@string/title_activity_display_login_screen"
            android:parentActivityName="software_engineering.bal_ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="software_engineering.bal_ui.MainActivity" />
        </activity>
        <activity
            android:name="software_engineering.bal_ui.DisplayInfo"
            android:label="@string/title_activity_display_info"
            android:parentActivityName="software_engineering.bal_ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="software_engineering.bal_ui.MainActivity" />
        </activity>
        <activity
            android:name="software_engineering.bal_ui.DisplaySettings"
            android:label="@string/title_activity_display_settings"
            android:parentActivityName="software_engineering.bal_ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="software_engineering.bal_ui.MainActivity" />
        </activity>
        <activity
            android:name="software_engineering.bal_ui.DisplayChat"
            android:label="@string/title_activity_display_chat"
            android:parentActivityName="software_engineering.bal_ui.DisplayLoginScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="software_engineering.bal_ui.DisplayLoginScreen" />
        </activity>
    </application>

</manifest>
